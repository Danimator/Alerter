{
    "manifest_version": 2,

    "name": "News Alerter",
    "description": "Shows you the latest important news from various news sources",
    "version": "0.1",
    "background": {
       "scripts": ["popup.js"]
    },
    "browser_action": {
        "default_icon": "icon128.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "icon128.png"
    },
    "options_page": "settings.html",
    "permissions": [
        "activeTab",
        "storage",
        "<all_urls>",
        "tabs"
    ]
}